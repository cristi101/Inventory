<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/black" />
            <corners android:radius="4dp" />
            <gradient android:type="linear" android:startColor="@color/keyboard" android:endColor="#ffffff" android:angle="90" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/black" />
            <corners android:radius="4dp" />
            <gradient android:type="linear" android:startColor="#ffffff" android:endColor="@color/keyboard" android:angle="90" />
        </shape>
    </item>
</selector>